{
    "name": "routex",
    "version": "1.0.0",
    "description": "A minimal file tree based api router for node rest api's.",
    "main": "app.js",
    "bin": {
        "routex": "dist/index.js"
    },
    "scripts": {
        "dev": "cd example && nodemon ../app.js",
        "dev:inspect": "cd example && nodemon --inspect-brk ../app.js",
        "start": "cd example && node ../app.js",
        "format": "prettier --write .",
        "create:doc": "node create-docs.js && git add docs/index.html",
        "build": "ncc build app.js -o dist",
        "test:endpoints": "sleep 5 && wait-on http://localhost:3000/api && node tests/endpoints.js",
        "test": "run-p dev test:*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/barelyhuman/route.git"
    },
    "author": "Siddharth Gelera",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/barelyhuman/route/issues"
    },
    "homepage": "https://github.com/barelyhuman/route#readme",
    "dependencies": {
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {
        "@zeit/ncc": "^0.22.3",
        "axios": "^0.19.2",
        "concurrently": "^5.2.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "marked": "^1.1.0",
        "prettier": "^2.0.5",
        "wait-on": "^5.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": [
                "npm run create:doc && npm run build && lint-staged"
            ]
        }
    },
    "lint-staged": {
        "*.{js,css,md,html}": [
            "prettier --write"
        ]
    }
}
